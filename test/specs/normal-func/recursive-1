Bool = tag.true.or(tag.false)
(x Int).minus   (y Int) | Int  = ffi.javascript("$x - $y").as(Int)
(x Int).plus    (y Int) | Int  = ffi.javascript("$x + $y").as(Int)
(x Int).times   (y Int) | Int  = ffi.javascript("$x * $y").as(Int)
(x Int).moreThan(y Int) | Bool = ffi.javascript("$x > $y   ? $Bool.$true : $Bool.$false").as(Bool)
(x Int).equals  (y Int) | Bool = ffi.javascript("$x === $y ? $Bool.$true : $Bool.$false").as(Bool)

(x Int).factorial | Int =  
    x.equals(0).
        true? 
            (1)
        false? 
            (x.times((x.minus(1)).factorial))

= 3.factorial
= 6.factorial

